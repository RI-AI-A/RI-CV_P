# Database Configuration
DATABASE_URL=postgresql+asyncpg://retail_user:retail_pass@postgres:5432/retail_intel
POSTGRES_USER=retail_user
POSTGRES_PASSWORD=retail_pass
POSTGRES_DB=retail_intel

# API Service Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=http://api_service:8000

# CV Service Configuration
CV_BRANCH_ID=branch_001
CV_VIDEO_SOURCE=rtsp://camera_ip:554/stream
# Or use a file: CV_VIDEO_SOURCE=/data/sample_video.mp4

# ROI Configuration (Region of Interest for enter/exit detection)
# Format: x1,y1,x2,y2 (top-left and bottom-right coordinates)
CV_ROI_COORDINATES=100,100,500,400

# YOLO Model Configuration
YOLO_MODEL_PATH=yolov8n.pt
YOLO_CONFIDENCE_THRESHOLD=0.5

# Tracker Configuration
TRACKER_TYPE=bytetrack
TRACKER_MAX_AGE=30
TRACKER_MIN_HITS=3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# ETL Configuration
ETL_TIME_WINDOW_MINUTES=60
ETL_HISTORICAL_BASELINE_DAYS=30
